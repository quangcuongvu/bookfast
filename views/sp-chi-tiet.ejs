	<div class="site-wrapper" id="top">
		
		
		<div class="product_detail">
            <div class="product-detail">
                
                <ul>
                    <li class="name"><a class='link' href="/">Trang chủ</a></li>
                    <li class="angle-right"> <i class="fa fa-angle-right" aria-hidden="true"></i></li>
                    <li class="name"><a class='link' href="/"><%=data.source%></a></li>
                    <li class="angle-right"> <i class="fa fa-angle-right" aria-hidden="true"></i></li>
                    <li class="name"><a class='link' href="/"><%=data.category%></a></li>
                </ul>

            </div>
        </div>
		<main class="inner-page-sec-padding-bottom">
			<div class="container">
				<div class="shop-product-wrap list with-pagination row space-db--30 shop-border">
					<div class="col-lg-4 col-sm-6">
						<div class="product-card card-style-list">
							
							<div class="product-list-content">
								<div class="card-image">
									<img src="<%=data.img_book%>" alt="<%=data.name_book%>">
								</div>
								<div class="product-card--body">
									<div class="product-header">
                                        
                                        <a href="/author/<%=data.author_unicode%>.<%=data.id_author%>.html" class="author">
                                            <%=data.name_author%>
                                        </a>
                                        
										<h3><a href="<%=data.link_book%>" tabindex="0"><%=data.name_book%></a></h3>
									</div>
									<div class="price-block">
										<span class="price "><span class="number"><%=data.price_book%></span>₫</span>
										<del class="price-old ">
                                            <span class='number list_price'><%=data.list_price%></span>₫
                                    </del>
                                        
										<span class="price-discount"><%=data.discount_rate%>%</span>
									</div>
                                    <div class="description">
                                        <span><%-data.description%></span>
                                    </div>
									
									<div class="rating-block">
										<span class="fas fa-star star_on"></span>
										<span class="fas fa-star star_on"></span>
										<span class="fas fa-star star_on"></span>
										<span class="fas fa-star star_on"></span>
										<span class="fas fa-star "></span>
									</div>
									<div class="btn-block">
										<a href="<%=data.link_book%>" class="btn btn-outlined">Mua Ngay</a>
										<a href="/search/?searchText=<%=data.name_unicode%>" class="card-link"><i class="fa fa-search" aria-hidden="true"></i> So Sánh Giá</a>
										<a href="/category/<%=data.category_unicode%>.html" class="card-link"><i class="fa fa-list-ul" aria-hidden="true"></i> <%=data.category%></a>
									</div>
								</div>
							</div>
						</div>
					</div>
					
				</div>
				
				
			</div>
		</main>
	</div>
