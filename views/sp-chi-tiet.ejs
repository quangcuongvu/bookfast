    <script>
        let x = document.querySelectorAll(".number");
        for (let i = 0, len = x.length; i < len; i++) {
            let num = Number(x[i].innerHTML)
                      .toLocaleString('vi');
            x[i].innerHTML = num;
            
        }
    </script> 
    
