                    <div class="logo"  style="margin-left: 40px;">
                        <a href="/">
                            <img src="/images/logo.png"  width="200px" height="150px" alt="Logo">
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="search">
                        <form method="GET" action="/search/">
                            <div class="tt-col">
                                <input type="text" class="tt-search-input" placeholder="Search" name="searchText">
                                <button class="tt-btn-search" type="submit"></button>
                            
                            </div>
