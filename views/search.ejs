<% include theme/header %> 
<div class="call-to-action">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1>Kết quả tìm kiếm</h1>
            </div>
            <div class="col-md-6">
                <!-- <a href="tel:0123456789">+012-345-6789</a> -->
            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-top:50px;">
	<div class="row">
        <%data.forEach(function(motphantu){%>
    	<div class="col-xs-12 col-sm-6 col-md-3">
            <div class="col-item">
                <div class="post-img-content">
                    <img src="<%=motphantu.img_book%>" class="img-responsive" />
                    <span class="round-tag">-<%=motphantu.discount_rate%>%</span>
                </div>
                <div class="info">
                    <div class="name">
                       <a href="/chi-tiet/<%=motphantu.name_unicode%>.<%=motphantu.id_book%>.html"><span><%=motphantu.name_book%></span> </a>
                    </div>
                    <div class="row">
                        <div class="price col-md-6">
                            <h5 class="price-text-color "><span class='number'><%=motphantu.price_book%></span>₫</h5>
                        </div>
                       
                    </div>
                    <div class="separator clear-left">
                        <p class="btn-add">
                            <i class="fa fa-shopping-cart"></i><a href="/chi-tiet/<%=motphantu.name_unicode%>.<%=motphantu.id_book%>.html" class="hidden-sm">Add to cart</a></p>
                        <p class="btn-details">
                            <i class="fa fa-list"></i><a href="/category/<%=motphantu.category_unicode%>.<%=motphantu.cat_id%>.html" class="hidden-sm"><%=motphantu.category%></a></p>
                    </div>
                    <div class="clearfix">
                    </div>
                </div>
            </div>
        </div>
        <%})%>
	</div>
</div>
<script>
    let x = document.querySelectorAll(".number");
    for (let i = 0, len = x.length; i < len; i++) {
        let num = Number(x[i].innerHTML)
                  .toLocaleString('vi');
        x[i].innerHTML = num;
        
    }
</script> 
